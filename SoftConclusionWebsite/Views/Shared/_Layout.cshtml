<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soft Conclusion</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5/dist/litera/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoftConclusionWebsite.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/images/icon.png" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid justify-content-center">
                <div class="d-flex align-items-center">

                    <a class="navbar-brand mx-4" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logo.png" alt="Soft Conclusion" style="height: 100px;">
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="position: absolute; top: 50%; right: 15px; transform: translateY(-50%);">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav">
                            <li class="nav-item mx-4">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item mx-4">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString() == "MindMaps" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="MindMaps">MindMaps</a>
                            </li>
                            <li class="nav-item mx-4">
                                <a class="nav-link text-dark @(ViewContext.RouteData.Values["Action"].ToString() == "Library" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Library">Library</a>
                            </li>
                            <li class="nav-item mx-4">
                                <a href="https://www.youtube.com/@@Soft.Conclusion" target="_blank" rel="noopener noreferrer">
                                    <span class="btn btn-danger">YouTube</span>
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="d-flex justify-content-center align-items-center">
            &copy; 2025 - Soft Conclusion. All Rights Reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>